@model Modulo_Matricula.Usuarios

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .myBtn {
        border: 1px solid #3f66fb;
        border-radius: 5px;
    }
</style>

<h2>Crear nuevo usuario.</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
