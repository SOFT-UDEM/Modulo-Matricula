
@{
    ViewBag.Title = "Login";
    //Layout = "~/Views/Shared/LayoutLogin.cshtml";
}

<h2>Login</h2>

<div class="row">

    <div class="alert-danger">
        @ViewBag.Error
    </div>

    <form action="@Url.Content("~/AccesoLogin/Login")" method="post">

        <div class=" form-group">
            <label>Usuario</label>
            <input type="email" name="email" placeholder="Ingresa su Correo..." />
        </div>

        <div class=" form-group">
            <label>Contraseña</label>
            <input type="password" name="pass" placeholder="Ingresa su contraseña..." />
        </div>

        <div class="form-group">
            <input type="submit" value="Entrar" class="btn btn-success" />
        </div>

        <p>Estoy de acuerdo con<a href="#"> Terminos y condiciones</a></p>
    </form>

</div>