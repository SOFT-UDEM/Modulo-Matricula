
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}
<style>
    .formLogin {
        padding: 16px;
        width: 450px;
        height: 300px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0px 0px 6px rgb(0 0 0 / 15%);
        border-radius: 8px;
    }
    .formLogin .form-control, .btn {
        width: 430px;
    }
</style>

<div class="row">

    <div class="alert-danger">
        @ViewBag.Error
    </div>

    <form class="formLogin" action="@Url.Content("~/AccesoLogin/Login")" method="post">
        <div class="form-group">
            <label class="label-default" for="email">Usuario</label>
            <input class="form-control" type="email" name="email" placeholder="Ingresa su Correo" />
        </div>
        <div class="form-group">
            <label class="label-default" for="pass">Contraseña</label>
            <input class="form-control" type="password" name="pass" placeholder="Ingresa su contraseña" />
        </div>
        <div class="form-group">
            <input type="submit" value="Entrar" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <p>Estoy de acuerdo con<a href="#"> Terminos y condiciones</a></p>
        </div>
    </form>

</div>