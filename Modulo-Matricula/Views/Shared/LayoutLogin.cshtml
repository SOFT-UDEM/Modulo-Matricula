
@{
    ViewBag.Title = "Inicio de Sesión";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Matricula</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .body-content {
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .container {
            max-width: 100%;
            width: auto;
        }
        .background {
            background-image: url('../../images/bg-intro-desktop.png');
            background-color: #e7f3fd;
        }
    </style>
</head>
<body style="padding-top: 0px; padding-bottom: 0px;" class="background">
    <div class="container body-content images">
        @RenderBody()
        <hr />
        <footer>
            <p style="font-weight:bold;">&copy; @DateTime.Now.Year - Modulo Matricula ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

